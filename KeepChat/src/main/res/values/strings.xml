<resources xmlns:tools="http://schemas.android.com/tools"
    tools:locale="en"
    tools:ignore="MissingTranslation">

    <string name="app_name">KeepChat</string>
    <string name="keepchat_settings">Keepchat Settings</string>
    <string name="xposed_description">Save any snap and story, both images and videos, you either sent or receive via Snapchat.</string>

    <!-- Snaps and stories -->
    <string name="pref_category_snaps">Snaps</string>
    <string name="pref_category_stories">Stories</string>
    <string name="pref_snaps_default_value">0</string>

    <string name="pref_images">Images</string>
    <string name="pref_videos">Videos</string>

    <string-array name="pref_snaps_entries">
        <item>Save automatically</item>
        <item>Ask to save</item>
        <item>Don\'t save</item>
    </string-array>
    <string-array name="pref_snaps_values">
        <item>0</item>
        <item>1</item>
        <item>2</item>
    </string-array>

    <string-array name="pref_stories_entries">
        <item>Save automatically</item>
        <item>Don\'t save</item>
    </string-array>
    <string-array name="pref_stories_values">
        <item>0</item>
        <item>2</item>
    </string-array>


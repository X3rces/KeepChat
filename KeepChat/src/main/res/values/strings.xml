    <string name="pref_category_extra_settings">Extra settings</string>

    <string name="pref_save_location_title">Choose save location</string>

    <string name="pref_save_sent_snaps_title">Save sent snaps</string>
    <string name="pref_save_sent_snaps_summary_on">Sent snaps will be saved</string>
    <string name="pref_save_sent_snaps_summary_off">Sent snaps won\'t be saved</string>


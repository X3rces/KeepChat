    <string name="pref_category_toasts">Toasts</string>

    <string name="pref_toasts_title">Show toast messages</string>
    <string name="pref_toasts_summary_on">Toast messages are enabled</string>
    <string name="pref_toasts_summary_off">Toast messages are disabled</string>


    <string name="pref_toasts_duration_title">Toast duration</string>
    <string name="pref_toasts_duration_default_value">1</string>

    <string-array name="pref_toasts_duration_entries">
        <item>Short</item>
        <item>Long</item>
    </string-array>
    <string-array name="pref_toasts_duration_values">
        <item>0</item>
        <item>1</item>
    </string-array>

